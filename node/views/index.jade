doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Stream
    meta(name='viewport', content='initial-scale=1.0, width=device-width, \
      height=device-height, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no') 
    meta(http-equiv='Refresh', content='120')
    link(rel='stylesheet', href='/stylesheets/bootswatch.css')    
    link(rel='stylesheet', href='/stylesheets/style.css')    
  body
    h1 Stream
    ln#messages
      - for(var i=0,ln=messages.length;i<20;i++)      
          tr
            td(style='width: '+(100/4)+'%')
              blockquote.twitter-tweet(lang='ja')
                p
                  | #{messages[i].text} 
                  a(href="#{messages[i].media_url}") #{messages[i].media_url} 
                |  #{messages[i].name}  (#{messages[i].screen_name} )
                a(href='#{messages[i].url}') #{messages[i].created_at}
              script(async='', src='//platform.twitter.com/widgets.js', charset='utf-8')

    script(src='//cdn.jsdelivr.net/jquery/2.1.1/jquery.min.js')
    script(src='/socket.io/socket.io.js')
    script(src='/javascripts/client.js')
